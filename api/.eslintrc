{
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended-type-checked"],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "prettier"],
  "parserOptions": {
    "tsconfigRootDir": "__dirname",
    "project": true
  },
  "ignorePatterns": ["node_modules", "dist", ""],
  "overrides": [
    {
      "files": ["**/*.test.ts"],
      "env": {
        "jest": true
      }
    }
  ]
}
